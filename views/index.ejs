<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Guia Perguntas</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Guia perguntas!</h1>
  <hr>
  <h3>Lista de perguntas</h3>

  <p>Nome: <%= nome %></p>
  <p>Linguagens favoritas: <%= lang %></p>
  <p>Empresa: <%= empresa %></p>
  <p>Funcioários: <%= funcionarios %></p>

  <% if (!msg) { %>
    <h3>Isso é uma mensagem de erro!</h3>
  <% } else { %>
    <h3>Nenhum erro encontrado!</h3>
  <% } %>

  <% produtos.forEach(function(produto) { %>
    <p>
      <strong><%= produto.nome %>:</strong>
      <em>R$<%= produto.preco %></em>
    </p>
  <% }) %>  

  <img src="/img/wow.jpg" alt="World of Warcraft">
</body>
</html>