<%- include ("partials/header.ejs"); %>
<body> 
  <%- include ("partials/navbar.ejs"); %> 
  <div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form action="/responder" method="POST">
      <h3>Responda</h3>
      <label class="mb-2" for="">Resposta:</label>
      <textarea class="form-control" name="corpo" id="" cols="30" rows="5" placeholder="Digite sua resposta"></textarea>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button class="btn btn-primary mt-2" type="submit">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta => { %>
      <div class="card my-2">
        <div class="card-body">
          <p><%= resposta.corpo %></p>
        </div>
      </div>
    <% }) %>
  </div>
</body>
<%- include ("partials/footer.ejs"); %>
